<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context="cmpt276.g12.doctorsdirect.pa_timePick">

    <RelativeLayout
        android:background="@drawable/round_layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Spinner
            android:id="@+id/spi_dayPick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="87dp"
            android:entries="@array/day" />

        <Spinner
            android:id="@+id/spi_timePick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/spi_dayPick"
            android:layout_marginTop="35dp"
            android:entries="@array/time" />

        <TextView
            android:id="@+id/tv_docName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="TextView"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/spi_timePick"
            android:layout_marginStart="22dp"
            android:layout_marginTop="46dp"
            android:text="status"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/status"
            android:layout_marginTop="24dp"
            android:text="@string/ClickandSee"
            android:textSize="18dp" />

        <Button
            android:background="@drawable/round_btn_blue"
            android:textColor="@color/white"
            android:id="@+id/btn_TimeConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_feedback"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="33dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/btn_Confirm" />
    </RelativeLayout>

</RelativeLayout>
